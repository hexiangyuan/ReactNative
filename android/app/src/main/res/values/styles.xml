<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Custom.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/Theme.AppCompat</item>
    </style>

    <style name="Dialog.DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="review_product_item_ratingbar_style" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">
            @drawable/review_product_item_rating_drawable_selector
        </item>
        <item name="android:numStars">5</item>
        <item name="android:rating">5</item>
        <item name="android:stepSize">1</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxHeight">25dp</item>
    </style>

    <style name="parcel_detail_text_view_style" parent="@android:style/Widget.RatingBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="pick_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/shape_bg_spinner</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="pick_button_style_color">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">#ff33b5e5</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">#FF9800</item>
    </style>
</resources>
